<?xml version="1.0" encoding="utf-8"?>
<!-- B.Rockbox App Icon - Rock Guitar (Android 4.x Compatible) -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background: Dark gradient circle -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#2d2d2d"
                android:endColor="#1a1a1a"
                android:angle="135"/>
            <size android:width="108dp" android:height="108dp"/>
        </shape>
    </item>

    <!-- Guitar body - Red rounded shape -->
    <item android:top="45dp" android:bottom="28dp" android:left="32dp" android:right="32dp">
        <shape android:shape="rectangle">
            <solid android:color="#E74C3C"/>
            <corners android:radius="22dp"/>
            <stroke android:width="2dp" android:color="#C0392B"/>
        </shape>
    </item>

    <!-- Guitar body - Lower bulge -->
    <item android:top="62dp" android:bottom="20dp" android:left="34dp" android:right="34dp">
        <shape android:shape="rectangle">
            <solid android:color="#E74C3C"/>
            <corners android:radius="20dp"/>
            <stroke android:width="2dp" android:color="#C0392B"/>
        </shape>
    </item>

    <!-- Guitar neck - Brown vertical bar -->
    <item android:top="15dp" android:bottom="45dp" android:left="49dp" android:right="49dp">
        <shape android:shape="rectangle">
            <solid android:color="#8B4513"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>

    <!-- Guitar headstock - Darker brown top -->
    <item android:top="10dp" android:bottom="88dp" android:left="46dp" android:right="46dp">
        <shape android:shape="rectangle">
            <solid android:color="#654321"/>
            <corners android:topLeftRadius="4dp" android:topRightRadius="4dp"/>
        </shape>
    </item>

    <!-- Sound hole / Center circle -->
    <item android:top="55dp" android:bottom="45dp" android:left="48dp" android:right="48dp">
        <shape android:shape="oval">
            <solid android:color="#1a1a1a"/>
        </shape>
    </item>

    <!-- "B" letter on left (gold) -->
    <item android:top="50dp" android:bottom="50dp" android:left="18dp" android:right="78dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFD700"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>

    <!-- Lightning bolt on right (gold) -->
    <item android:top="46dp" android:bottom="54dp" android:left="70dp" android:right="26dp">
        <rotate
            android:fromDegrees="15"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="#FFD700"/>
            </shape>
        </rotate>
    </item>

    <!-- Rock star accent - Top right -->
    <item android:top="22dp" android:bottom="78dp" android:left="70dp" android:right="26dp">
        <shape android:shape="oval">
            <solid android:color="#FFD700"/>
            <size android:width="8dp" android:height="8dp"/>
        </shape>
    </item>

    <!-- Rock star accent - Bottom left -->
    <item android:top="78dp" android:bottom="22dp" android:left="26dp" android:right="70dp">
        <shape android:shape="oval">
            <solid android:color="#FFD700"/>
            <size android:width="8dp" android:height="8dp"/>
        </shape>
    </item>

</layer-list>
